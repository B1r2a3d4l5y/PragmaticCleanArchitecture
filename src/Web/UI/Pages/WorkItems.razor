@if (State.Initialised)
{
    <div class="clearfix">
        <h2 class="float-start">@State.SelectedList!.Title</h2>
        <button class="btn btn-primary float-end" @onclick="ShowCreateWorkItemDialog">+</button>
    </div>

    <div class="d-flex flex-wrap">
        @foreach (var item in State.SelectedList.WorkItems)
        {
            <div class="card m-2" style="width: 18rem;">
                <div class="card-body">
                    <button class="btn btn-primary float-end" @onclick="(() => DeleteWorkItem(item.Id))">
                        <i class="bi bi-trash"></i>
                    </button>
                    <button class="btn btn-primary float-end" @onclick="(() => ShowEditWorkItemDialog(item))">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><small class="text-muted">Assigned to: @item.AssignedTo</small></p>
                    <p class="card-text"><small class="text-muted">Start Date: @item.StartDate</small></p>
                    <p class="card-text"><small class="text-muted">Priority: @item.Priority</small></p>
                </div>
            </div>
        }
    </div>

    @if (_showCreateWorkItemDialog)
    {
        <div class="modal" tabindex="-1" style="display:block">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Work Item</h5>
                        <button type="button" class="btn-close" @onclick="CloseCreateWorkItemDialog"></button>
                    </div>
                    <div class="modal-body">
                        <EditForm Model="_newWorkItem" OnValidSubmit="AddWorkItem">
                            <InputText id="title" @bind-Value="_newWorkItem.Title" placeholder="Title" />
                            <button type="submit">Create Work Item</button>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (_showEditWorkItemDialog)
    {
        <div class="modal" tabindex="-1" style="display:block">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Work Item</h5>
                        <button type="button" class="btn-close" @onclick="CloseEditWorkItemDialog"></button>
                    </div>
                    <div class="modal-body">
                        <EditForm Model="_editWorkItem" OnValidSubmit="UpdateWorkItem">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <InputText id="title" @bind-Value="_editWorkItem.Title" placeholder="Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <InputTextArea id="description" @bind-Value="_editWorkItem.Description" class="form-control" style="height: 100px;" />
                            </div>
                            <div class="form-group">
                                <label for="assignedTo">Assigned To</label>
                                <InputSelect id="assignedTo" @bind-Value="_editWorkItem.AssignedTo" class="form-control">
                                    <!-- Add your options here -->
                                </InputSelect>
                            </div>
                            <div class="form-group">
                                <label for="priority">Priority</label>
                                <InputSelect id="priority" @bind-Value="_editWorkItem.Priority" class="form-control">
                                    <!-- Add your options here -->
                                </InputSelect>
                            </div>
                            <div class="form-group">
                                <label for="startDate">Start Date</label>
                                <InputDate id="startDate" @bind-Value="_editWorkItem.StartDate" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }

}
