@page "/roles"
@using UI.Identity;
@attribute [Authorize(Permission.ReadRoles)]

<PageTitle>Role Management</PageTitle>

<h1>Role Management</h1>

<p>Manage user roles for your project.</p>

@if (Model == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => DeleteRole(role)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <input type="text" id="newRole" class="form-control" placeholder="Enter new role" @bind="newRoleName" />
                </td>
                <td>
                    <button class="btn btn-primary" @onclick="AddRole">
                        <i class="bi bi-plus"></i>
                    </button>
                </td>
            </tr>
        </tfoot>
    </table>
}
